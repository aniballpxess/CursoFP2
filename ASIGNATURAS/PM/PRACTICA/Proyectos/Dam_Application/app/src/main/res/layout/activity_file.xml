<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#EF54BD"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="48dp"
    android:paddingEnd="24dp"
    android:paddingBottom="48dp"
    android:scrollbars="vertical"
    tools:context=".FileActivity">

    <Button
        android:id="@+id/btn_create_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Crear Fichero"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_fill_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Rellenar Fichero"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_show_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Mostrar Contenido"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/file_content_view"
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:gravity="start"
        android:padding="2dp"
        android:scrollbars="vertical"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_clear_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Vaciar y Cerrar"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="En esta actividad trabajamos con un fichero de texto."
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="italic" />

</LinearLayout>