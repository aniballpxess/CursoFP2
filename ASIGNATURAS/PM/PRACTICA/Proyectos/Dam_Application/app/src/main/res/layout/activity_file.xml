<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FileActivity">

    <!-- Buttons Section -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <!-- Button 1 -->
        <Button
            android:id="@+id/btn_create_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Crear Fichero" />

        <!-- Button 2 -->
        <Button
            android:id="@+id/btn_fill_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="LLenar Fichero" />

        <!-- Button 3 -->
        <Button
            android:id="@+id/btn_show_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Mostrar Fichero" />

        <!-- Button 4 -->
        <Button
            android:id="@+id/btn_clear_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Limpiar Fichero" />
    </GridLayout>

    <!-- Multi-line TextView Section -->
    <TextView
        android:id="@+id/file_content_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:text="Contenido del fichero."
        android:textSize="16sp"
        android:gravity="start"
        android:scrollbars="vertical" />

    <!-- Custom Navigation Section -->
    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="#E0E0E0"
        android:gravity="center"
        android:layout_gravity="center">

        <!-- Navigation Button 1 -->
        <Button
            android:id="@+id/btn_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/go_back_txt" />

        <!-- Navigation Button 2 -->
        <Button
            android:id="@+id/btn_go_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/go_test_txt" />

        <!-- Navigation Button 3 -->
        <Button
            android:id="@+id/btn_go_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/go_next_txt" />
    </LinearLayout>

</LinearLayout>