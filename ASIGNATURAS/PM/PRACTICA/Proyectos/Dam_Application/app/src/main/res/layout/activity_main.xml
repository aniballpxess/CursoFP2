<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- DescripciÃ³n de la imagen para accesibilidad -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/backgroud_image"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_pizarra" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingTop="48dp"
        android:paddingEnd="24dp"
        android:paddingBottom="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="@string/welcome_msg"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.helper.widget.Flow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:constraint_referenced_ids="btn_actividadFichero,btn_actividadCalculadora,btn_actividadPaleta,btn_placeholder2,btn_placeholder1,btn_placeholder0"
                    app:flow_wrapMode="aligned" />

                <Button
                    android:id="@+id/btn_actividadFichero"
                    android:layout_width="108sp"
                    android:layout_height="wrap_content"
                    android:text="Actividad con fichero" />

                <Button
                    android:id="@+id/btn_actividadCalculadora"
                    android:layout_width="108sp"
                    android:layout_height="wrap_content"
                    android:text="Actividad con calculadora" />

                <Button
                    android:id="@+id/btn_actividadPaleta"
                    android:layout_width="108sp"
                    android:layout_height="wrap_content"
                    android:text="Actividad con paleta" />

                <Button
                    android:id="@+id/btn_placeholder2"
                    android:layout_width="108sp"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_txt" />

                <Button
                    android:id="@+id/btn_placeholder1"
                    android:layout_width="108sp"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_txt" />

                <Button
                    android:id="@+id/btn_placeholder0"
                    android:layout_width="108sp"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_txt" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_actividadTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go_test_txt" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
