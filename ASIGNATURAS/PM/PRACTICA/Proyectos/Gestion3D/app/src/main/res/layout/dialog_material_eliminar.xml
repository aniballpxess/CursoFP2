<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/txtNombreMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Nombre del material" />

    <TextView
        android:id="@+id/txtColorMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color: Azul" />

    <TextView
        android:id="@+id/txtMarcaMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marca: XYZ" />

    <TextView
        android:id="@+id/txtCantidadMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock: 10" />

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar" />
</LinearLayout>
