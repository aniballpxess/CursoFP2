<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nombre -->
        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del material"
            android:inputType="text" />

        <!-- Color -->
        <EditText
            android:id="@+id/edtColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color"
            android:inputType="text" />

        <!-- Marca -->
        <EditText
            android:id="@+id/edtMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Marca"
            android:inputType="text" />

        <!-- Cantidad en stock -->
        <EditText
            android:id="@+id/edtCantidadStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad en stock"
            android:inputType="number" />

        <!-- Umbral de alerta -->
        <EditText
            android:id="@+id/edtUmbralAlerta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Umbral de alerta"
            android:inputType="number" />

        <!-- BotÃ³n para guardar cambios -->
        <Button
            android:id="@+id/btnGuardarCambios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Cambios"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
