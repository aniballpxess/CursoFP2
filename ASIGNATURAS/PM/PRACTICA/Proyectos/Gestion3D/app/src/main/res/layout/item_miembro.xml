<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical">

    <!-- Imagen de perfil -->
    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_usuario"
        android:contentDescription="Imagen del usuario"
        android:scaleType="centerCrop"
        android:layout_marginEnd="10dp"/>

    <!-- Contenedor de nombre y correo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nombre del usuario -->
        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Usuario"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Correo del usuario -->
        <TextView
            android:id="@+id/txtCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="correo@ejemplo.com"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <!-- BotÃ³n de opciones -->
    <ImageView
        android:id="@+id/btnOpciones"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_mas_opciones"
        android:contentDescription="Opciones de usuario"/>
</LinearLayout>
