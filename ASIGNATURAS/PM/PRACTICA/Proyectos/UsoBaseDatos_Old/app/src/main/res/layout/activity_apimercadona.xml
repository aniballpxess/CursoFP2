<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/mencabrona"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".APIMercadonaActivity">

<EditText
    android:id="@+id/IdIntroCodigo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="96dp"
    android:ems="10"
    android:gravity="center"
    android:hint="Â¿CODIGO DE CATEGORIA?"
    android:inputType="textPersonName"
    android:textSize="24sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/btnBuscar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="136dp"
    android:background="#3F51B5"
    android:text="BUSCAR CATEGORIA"
    android:textColor="#FFFFFF"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/IdNombreCategoria" />

<TextView
    android:id="@+id/IdNombreCategoria"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="136dp"
    android:gravity="center"
    android:text="AQUI VA A MOSTRAR CATEGORIA"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/IdIntroCodigo" />

</androidx.constraintlayout.widget.ConstraintLayout>


