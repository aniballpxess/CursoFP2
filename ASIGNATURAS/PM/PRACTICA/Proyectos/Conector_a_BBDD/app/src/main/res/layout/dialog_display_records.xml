<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurfaceContainerHighest"
    android:padding="20dp"
    android:gravity="end">

    <TableLayout
        android:id="@+id/tl_recordsTable"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:divider="?attr/colorOnSurface"
        android:stretchColumns="*"
        android:showDividers="middle"
        android:dividerPadding="8dp">

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorSurfaceContainerHighest"
        android:gravity="end">

        <ImageButton
            android:id="@+id/btn_borrarRegistros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Borrar Registros"
            android:padding="10dp"
            app:tint="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/btn_editarRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Editar Registros"
            android:padding="10dp"
            app:tint="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/btn_editarDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Editar Descripcion"
            android:padding="10dp"
            app:tint="?attr/colorOnSurface" />

    </LinearLayout>


</LinearLayout>