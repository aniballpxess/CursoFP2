    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with Brave",
            "type": "chrome",
            "request": "launch",
            "webRoot": "${workspaceFolder}",
            "file": "${file}",
            "url": "http://localhost:8080",
            "runtimeExecutable": "C:/Program Files/BraveSoftware/Brave-Browser/Application/brave.exe"
        },
        {
            "name": "Launch with Edge",
            "type": "msedge",
            "request": "launch",
            "webRoot": "${workspaceFolder}",
            "file": "${file}",
            "url": "http://localhost:8080"
        }
    ]
}